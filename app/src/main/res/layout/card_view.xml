<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:id="@+id/liner_layaut"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="#FFFFFF"
    android:paddingBottom="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/avatar_logo"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/maps6"
            />

        <TextView
            android:id="@+id/nombre_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar_logo"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:text="nombre de susuario"
            />
        <TextView
            android:id="@+id/hora_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:layout_below="@+id/nombre_entidad"
            android:layout_toRightOf="@+id/avatar_logo"
            android:layout_marginLeft="5dp"
            android:text="FEcha hora"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/form_borde_rond"
            android:padding="5dp"
            >
                <TextView
                    android:id="@+id/i_tv_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"
                    android:text="Hola soy el titulo"
                    />
                <TextView
                    android:id="@+id/i_tv_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/i_tv_nombre"
                    android:text="Hola soy la descripcion"
                    />
            <ImageView
                android:id="@+id/iv_imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/calendario"
                android:layout_below="@+id/i_tv_descripcion"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:drawableLeft="@mipmap/ojo"
            android:background="@drawable/boton_con_border_verde_plus"
            android:textColor="#fff"
            android:padding="4dp"
            android:id="@+id/iv_plus_not"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>
</LinearLayout>

</LinearLayout>