<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:id="@+id/liner_layaut"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:paddingBottom="10dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/avatar_logo"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/nombre_entidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/avatar_logo"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    />
                <TextView
                    android:id="@+id/hora_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:layout_below="@+id/nombre_entidad"
                    android:layout_toRightOf="@+id/avatar_logo"
                    android:layout_marginLeft="5dp"
                    />
        </RelativeLayout>

    <View android:background="#BDBDBD"
        android:id="@+id/lineaHorizontal"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="fill_parent">
    </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
                <TextView
                    android:id="@+id/i_tv_nombre"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/i_tv_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/i_tv_nombre"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_imagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>

</LinearLayout>