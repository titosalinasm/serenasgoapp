<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ly_left"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rly_contenedor"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_left"
                android:src="@mipmap/maps6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/tv_nombre_left"
                android:text="Tito Salinas"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_left"
                android:layout_weight="0"
              android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_mensaje_left"
                android:text="mensaje todo lo que exitsa del mensaje"
                android:layout_below="@+id/tv_nombre_left"
                android:layout_toRightOf="@+id/iv_left"
                android:layout_marginLeft="10dp"

                android:layout_weight="0"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>